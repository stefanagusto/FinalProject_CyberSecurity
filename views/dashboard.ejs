<!-- views/dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Include the Tailwind CSS styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>

<body class="bg-gray-100">

    <div class="flex items-center justify-center min-h-screen">
        <div class="p-8 bg-white rounded-lg shadow-md w-96">
            <h1 class="mb-4 text-3xl font-bold text-center text-blue-600">
                Welcome <%= userName %>!
            </h1>
            <p class="text-center text-gray-700">
                This is your dashboard. Feel free to customize it with your content.
            </p>
            <!-- Add your additional content here -->
        </div>
    </div>
    <!-- Link to Logout or other actions -->
    <a href="/logout" class="block text-center mt-4 text-sm text-blue-500 hover:text-blue-800">Logout</a>

</body>

</html>
